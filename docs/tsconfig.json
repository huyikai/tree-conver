{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": [
        "./../docs"
      ]
    }
  },
  "include": [
    "./../docs/**/*.ts",
    "./../docs/**/*.d.ts",
    "./../docs/**/*.tsx",
    "./../docs/**/*.vue",
    "**/*.ts",
    "**/*.tsx",
    "index.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}